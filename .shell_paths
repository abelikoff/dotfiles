# path setup for shells

if [ -d $HOME/bin ]; then
    PATH=$HOME/bin:$PATH
fi

# Anaconda

if [ -d $HOME/anaconda/bin ]; then
    PATH=$HOME/anaconda/bin:$PATH
fi

# Google cloud SDK

if [ -d $HOME/devel/google-cloud-sdk ]; then
    if [ -n "$ZSH_VERSION" ]; then
        source $HOME/devel/google-cloud-sdk/path.zsh.inc
        source $HOME/devel/google-cloud-sdk/completion.zsh.inc
    elif [ -n "$BASH_VERSION" ]; then
        source $HOME/devel/google-cloud-sdk/path.bash.inc
        source $HOME/devel/google-cloud-sdk/completion.bash.inc
    fi
fi

# Flutter

if [ -d $HOME/devel/flutter ]; then
    PATH=$PATH:$HOME/devel/flutter/bin
fi

# JDK

if [ -d /opt/jdk ]; then
    PATH=$PATH:/opt/jdk/bin
    JAVA_HOME=/opt/jdk
    export JAVA_HOME
fi

# Homebrew

if [ -d $HOME/devel/homebrew ]; then
    PATH=$HOME/devel/homebrew/bin:$PATH
fi


# OPAM

if [ -d $HOME/.opam ]; then
  . $HOME/.opam/opam-init/init.sh > /dev/null 2> /dev/null || true
fi


# pyenv

if  which pyenv > /dev/null 2>&1; then
    eval "$(pyenv init -)"
fi


# R

if [ -d $HOME/lib/R ]; then
  export R_LIBS_USER=$HOME/lib/R
fi

export R_HISTSIZE=5000


# Rust

if [ -d $HOME/.cargo ]; then
    PATH=$PATH:$HOME/.cargo/bin
fi


#
# TeX

if [[ $TEXINPUTS != */home/* ]]; then
    TEXINPUTS=".:$HOME/lib/latex:"
    export TEXINPUTS
fi


if [ -n "$ZSH_VERSION" ]; then
    if [ -f ~/.zshrc.local ]; then
        . ~/.zshrc.local
    fi
elif [ -n "$BASH_VERSION" ]; then
    if [ -f ~/.bashrc.local ]; then
        . ~/.bashrc.local
    fi
fi

export PATH
